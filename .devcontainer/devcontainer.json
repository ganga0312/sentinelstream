{
    "name": "SentinelStream Dev Container",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3.9",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "forwardPorts": [8001],
    "postCreateCommand": "pip install -r requirements.txt",
    "remoteUser": "vscode"
}